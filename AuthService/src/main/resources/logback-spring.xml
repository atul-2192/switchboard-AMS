<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- ================= LOCAL PROFILE ================= -->
    <springProfile name="local">

        <appender name="CONSOLE"
                  class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>
                    %d{HH:mm:ss.SSS} │ %-5level │ %logger{30} │ trace=%X{traceId} corr=%X{correlationId} │
                    %msg%n
                </pattern>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>

    </springProfile>

    <!-- ================= PROD PROFILE ================= -->
    <springProfile name="prod">

        <appender name="CONSOLE"
                  class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <customFields>
                    {
                    "service":"${spring.application.name}",
                    "env":"prod"
                    }
                </customFields>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>

    </springProfile>

</configuration>
